<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rajat.mymastercardapp.Last10transactions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last 10 Transactions"
        android:layout_alignParentStart="true"
        android:id="@+id/abcd"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 1:"
        android:id="@+id/t1"
        android:layout_below="@+id/abcd"
        android:layout_alignEnd="@+id/abcd"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 2:"
        android:id="@+id/t2"
        android:layout_below="@+id/t1"
        android:layout_alignEnd="@+id/t1"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 3: :"
        android:id="@+id/t3"
        android:layout_below="@+id/t2"
        android:layout_alignEnd="@+id/t2"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 4:"
        android:id="@+id/t4"
        android:layout_below="@+id/t3"
        android:layout_alignEnd="@+id/t3"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 5:"
        android:id="@+id/t5"
        android:layout_below="@+id/t4"
        android:layout_alignEnd="@+id/t4"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 6:"
        android:id="@+id/t6"
        android:layout_below="@+id/t5"
        android:layout_alignEnd="@+id/t5"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 7:"
        android:id="@+id/t7"
        android:layout_below="@+id/t6"
        android:layout_alignEnd="@+id/t6"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 8:"
        android:id="@+id/t8"
        android:layout_below="@+id/t7"
        android:layout_alignEnd="@+id/t7"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 9:"
        android:id="@+id/t9"
        android:layout_below="@+id/t8"
        android:layout_alignEnd="@+id/t8"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="trans 10:"
        android:id="@+id/t10"
        android:layout_below="@+id/t9"
        android:layout_alignEnd="@+id/t9"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />

</RelativeLayout>
